@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="col-md-12">
    <div class="chart-box">
        <h4>Marka</h4>
        <p>MultiShop için Marka işlemleri buradan yapılmaktadır.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>İkon</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.BrandName</td>
                            <td><img src="@item.ImageUrl" style="width:50px; height:50px;" /></td>
                            <td><a href="/Admin/Brand/DeleteBrand/@item.BrandId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/Brand/UpdateBrand/@item.BrandId" class="btn btn-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Brand/CreateBrand" class="btn btn-primary">Yeni Marka Ekle</a>
        </div>
    </div>
</div>

