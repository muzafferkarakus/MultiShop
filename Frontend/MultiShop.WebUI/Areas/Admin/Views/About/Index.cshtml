@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="col-md-12">
    <div class="chart-box">
        <h4>Hakkımda</h4>
        <p>MultiShop için Hakkımda işlemleri buradan yapılmaktadır.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Açıklama</th>
                        <th>Adres</th>
                        <th>E-Posta</th>
                        <th>Telefon</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Description</td>
                            <td>@item.Address</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/About/CreateAbout" class="btn btn-primary">Yeni Hakkımda Ekle</a>
        </div>
    </div>
</div>

