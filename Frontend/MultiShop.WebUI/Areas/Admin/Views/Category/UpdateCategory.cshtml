@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="col-md-12">
    <div class="chart-box">
        <h4>Kategoriler</h4>
        <div class="bs-example" data-example-id="bordered-table">
            <form method="post">
                <input type="hidden" class="form-control" asp-for="CategoryId" />
                <label>Kategori Adı</label>
                <input type="text" class="form-control" asp-for="CategoryName" />
                <br />
                <label>Görsel</label>
                <input type="text" class="form-control" asp-for="ImageUrl" />
                <br />
                <button class="btn btn-primary">Güncelle</button>
            </form>
        </div>
    </div>
</div>

