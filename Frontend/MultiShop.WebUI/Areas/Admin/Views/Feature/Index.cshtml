@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="col-md-12">
    <div class="chart-box">
        <h4>Öne Çıkan Görseller</h4>
        <p>MultiShop için Kategori işlemleri buradan yapılmaktadır.</p>
        <div class="bs-example" data-example-id="bordered-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>İkon</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Title</td>
                            <td>@item.Icon</td>
                            <td><a href="/Admin/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Admin/Feature/UpdateFeature/@item.FeatureId" class="btn btn-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Feature/CreateFeature" class="btn btn-primary">Yeni Özellik Ekle</a>
        </div>
    </div>
</div>

