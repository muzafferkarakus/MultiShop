@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="col-md-12">
    <div class="chart-box">
        <h4>Yorumlar</h4>
        <div class="bs-example" data-example-id="bordered-table">
            <form method="post">
                <input type="hidden" asp-for="UserCommentId" />
                <input type="hidden" asp-for="ProductId" />
                <label>Kullanıcı</label>
                <input type="text" class="form-control" asp-for="NameSurname" />
                <br />
                <label>E-Posta</label>
                <input type="text" class="form-control" asp-for="Email" />
                <br />
                <label>Kullanıcı Puanı</label>
                <input type="number" class="form-control" asp-for="Raiting" />
                <br />
                <label>Tarih</label>
                <input type="date" class="form-control" asp-for="CreatedDate" />
                <br />
                <label>Görsel</label>
                <input type="text" class="form-control" asp-for="ImageUrl" />
                <br />
                <label>Yorum</label>
                <textarea rows="3" asp-for="CommentDetail" class="form-control"></textarea>
                <br />
                <button class="btn btn-success">Güncelle</button>
            </form>
        </div>
    </div>
</div>


