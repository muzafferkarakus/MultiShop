@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    string tableRowColor = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Siparişlerim</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tarih</th>
                            <th>Tutar</th>
                            <th>Sipariş Detayları</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            if (count == 1) { tableRowColor = "table-warning"; }
                            if (count == 2) { tableRowColor = "table-danger"; }
                            if (count == 3) { tableRowColor = "table-primary"; }
                            if (count == 4) { tableRowColor = "table-secondary"; }
                            if (count == 5) { tableRowColor = "table-warning"; }
                            if (count == 6) { tableRowColor = "table-success"; }
                            if (count == 7) { tableRowColor = "table-info"; }
                            <tr class="@tableRowColor">
                                <td>@count</td>
                                <td>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td>
                                <td>@item.TotalPrice</td>
                                <td><a href="#" class="btn btn-danger">Sipariş Detayları</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
