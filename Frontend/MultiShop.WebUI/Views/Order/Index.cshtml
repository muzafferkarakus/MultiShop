@model CreateOrderAddressDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Fatura Adresi</span></h5>
            <div class="bg-light p-30 mb-5">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Ad</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="Ad">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyad</label>
                            <input class="form-control" type="text" asp-for=Surname placeholder="Soyadı">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-Posta</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="E-posta">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon No</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="Phone">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="Adres 1">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="Adres 2">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Ülke">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İl</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="İl">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="İlçe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="Posta Kodu">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>
            @await Component.InvokeAsync("_OrderSummaryComponentPartial")
            @await Component.InvokeAsync("_OrderPaymentComponentPartial")
        </div>
    </div>
</div>